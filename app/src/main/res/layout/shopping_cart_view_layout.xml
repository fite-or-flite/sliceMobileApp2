<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/shopping_cart_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/shopping_cart_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:layout_above="@id/shopping_cart_product_description"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:id="@+id/shopping_cart_product_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="150dp"
        android:layout_below="@id/shopping_cart_product_name"
        />

    <ImageView
        android:id="@+id/shopping_cart_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shopping_cart_product_price"
        android:src="@drawable/ic_baseline_delete"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
    />

</RelativeLayout>