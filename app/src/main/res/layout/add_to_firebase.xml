<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <EditText
        android:id="@+id/edit_text_menu_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Menu Item Name"
        android:background="@android:color/white"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/edit_text_menu_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Menu Item Description"
        android:background="@android:color/white"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/edit_text_menu_item_name"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/edit_text_menu_item_price_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Menu Item Price Small"
        android:background="@android:color/white"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/edit_text_menu_item_description"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/edit_text_menu_item_price_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Menu Item Price Medium"
        android:background="@android:color/white"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/edit_text_menu_item_price_small"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/edit_text_menu_item_price_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Menu Item Price Large"
        android:background="@android:color/white"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/edit_text_menu_item_price_medium"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/submit_info_to_firebase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_text_menu_item_price_large"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginStart="100dp"
        android:text="Add to Firebase"
        />

</androidx.constraintlayout.widget.ConstraintLayout>