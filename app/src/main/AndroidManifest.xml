<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.slicemobileapp4">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/slice_swb_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/slice_swb_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ShoppingCart"></activity>
        <activity
            android:name=".CategoryDetails"
            android:label="@string/title_activity_pizza"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".add_to_firebase"
            android:label="addToFirebase"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ItemDetails"
            android:label="itemDetails"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>